<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.molgenis</groupId>
        <artifactId>molgenis</artifactId>
        <version>1.4.4</version>
    </parent>
    <artifactId>molgenis-palga</artifactId>
    <packaging>war</packaging>
    <version>1.4.6-PALGA</version>

    <build>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
                <filtering>true</filtering>
                <excludes>
                    <exclude>**git.properties</exclude>
                    <exclude>**/model/*.xml</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <!-- make molgenis server properties available in pom.xml -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${user.home}/.molgenis/palga/molgenis-server.properties</file>
                            </files>
                            <quiet>true</quiet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- execute molgenis generator -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>
            <!-- add sources/resources created by molgenis generator -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
			</plugin>
		</plugins>
		<!-- web server -->
		<pluginManagement>
			<plugins>
				<plugin>
	                <groupId>org.eclipse.jetty</groupId>
					<artifactId>jetty-maven-plugin</artifactId>
					<configuration>
	                	<stopPort>8079</stopPort>
	                    <stopKey>jetty-stop</stopKey>
	                    <reload>manual</reload>
	                    <systemProperties>
							<systemProperty>
								<name>molgenis.home</name>
								<value>${user.home}${file.separator}.molgenis${file.separator}palga</value>
							</systemProperty>
						</systemProperties>
	            	</configuration>
	            </plugin>
	        </plugins>
        </pluginManagement>
    </build>

